{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "v-upscale",
  "version": "0.1.0",
  "identifier": "com.v-upscale.upscaler",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "v-upscale",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/**",
          "$DOCUMENT/**",
          "$DESKTOP/**",
          "$DOWNLOAD/**",
          "$APPDATA/**",
          "$TEMP/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "moltenvk/*": "./",
      "shaders/upscale.spv": "./"
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "entitlements": null
    }
  }
}
